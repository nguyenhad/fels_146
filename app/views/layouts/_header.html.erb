<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("Header.home"), root_path %></li>
        <li><%= link_to t("Header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("Users.name"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "Header.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("Header.profile"), "#" %></li>
              <li><%= link_to t("Header.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("Header.log_out"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("Header.log_in"), login_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
